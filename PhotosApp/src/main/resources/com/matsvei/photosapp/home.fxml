<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.matsvei.photosapp.home.HomeController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="welcomeText" HBox.hgrow="ALWAYS" />
        <Button fx:id="logoutButton" onAction="#onLogout" text="Log out" />
    </HBox>

    <Label text="My Albums" style="-fx-font-size: 16px; -fx-font-weight: bold;">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>

    <ListView fx:id="albumListView" VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="createAlbumButton" onAction="#onCreateAlbum" text="Create Album" />
        <Button fx:id="deleteAlbumButton" onAction="#onDeleteAlbum" text="Delete Album" />
        <Button fx:id="renameAlbumButton" onAction="#onRenameAlbum" text="Rename Album" />
        <Button fx:id="openAlbumButton" onAction="#onOpenAlbum" text="Open Album" />
    </HBox>
    </VBox>